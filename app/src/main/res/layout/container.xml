<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/black"
    app:cardCornerRadius="8dp"
    app:cardElevation="15dp">
<LinearLayout
    android:background="@drawable/cv_color"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:orientation="horizontal"
    >

   <de.hdodenhof.circleimageview.CircleImageView
       android:layout_width="100dp"
       android:layout_height="100dp"
       app:civ_border_color="@android:color/holo_blue_dark"
       app:civ_border_width="2dp"
       android:src="@drawable/userimg"
       android:layout_marginTop="10dp"
       android:id="@+id/profilePicCard"
       />

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/cv_phoneNum"
            android:textColor="@color/white"
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/baloo_tamma"
            android:text="Phone number"
            android:drawableLeft="@drawable/ic_baseline_local_phone_24"
            app:drawableTint="@android:color/holo_blue_dark"
            android:drawablePadding="6dp"

            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/cv_workDesc"
            android:padding="2dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/baloo_tamma"
            android:text="Work description"
            android:drawableLeft="@drawable/ic_baseline_work_outline_24"
            app:drawableTint="@android:color/holo_blue_dark"
            android:drawablePadding="6dp"

            />

        <androidx.appcompat.widget.AppCompatTextView

            android:id="@+id/cv_location"
            android:padding="2dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/baloo_tamma"
            android:text="Location"
            android:drawableLeft="@drawable/ic_baseline_location_on_24"
            app:drawableTint="@android:color/holo_blue_dark"
            android:drawablePadding="6dp"

            />
        <androidx.appcompat.widget.AppCompatTextView

            android:id="@+id/cv_jobCount"
            android:padding="5dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/baloo_tamma"
            android:text="Job count"
            android:drawableLeft="@drawable/star"
            app:drawableTint="@android:color/holo_blue_dark"
            android:drawablePadding="6dp"

            />

    </LinearLayout>


   
   </LinearLayout>

    <View
        android:layout_marginTop="159dp"
        android:layout_marginLeft="140dp"
        android:layout_width="200dp"
        android:layout_height="3dp"
        android:background="@android:color/holo_blue_dark">
    </View>

</androidx.cardview.widget.CardView>